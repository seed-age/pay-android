<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/main_sign_check_rsa"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toLeftOf="@id/divider"
            android:layout_alignParentLeft="true"
            android:text="RSA验签"/>
        <Button
            android:id="@+id/main_sign_check_rsa2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/divider"
            android:text="RSA2验签"/>
        <Button
            android:id="@+id/main_pay_check_sandbox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/main_sign_check_rsa"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/divider"
            android:text="沙箱支付测试\n(只支持支付宝)"/>
        <Button
            android:id="@+id/main_pay_check"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/main_sign_check_rsa2"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/divider"
            android:text="支付测试\n(会产生实际费用)"/>
    </RelativeLayout>
